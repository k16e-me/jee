---
import { useStoryblokApi } from '@storyblok/astro'
import StoryblokComponent from '@storyblok/astro/StoryblokComponent.astro'
import Base from '@layouts/Base.astro'

// Let Astro know what routes to build
export async function getStaticPaths() {
	const storyblokApi = useStoryblokApi(),
		{ data } = await storyblokApi.get('cdn/links/', {
			version: import.meta.env.DEV ? 'draft' : 'published',
		})

	let links = data.links,
		exceptions = [
			'settings',
			'global',
			'awards',
			'designations',
			'profiles',
			'category',
			'offices',
			'regions',
			'previews',
			'legal',
			'contact',
			'careers',
			'africa-expertise',
			'sectors',
			'practices',
			// 'people',
			// 'insights',
			'events',
			'successes',
		]
	links = Object.values(links).filter(
		(link) => !exceptions.includes(link.slug.split('/')[0]),
	)

	return links.map((link) => {
		return {
			params: {
				slug: link.slug === 'home' ? undefined : link.slug,
			},
		}
	})
}

// Pull slug from the routes and corresponding content/blocks from Storyblok
const { slug } = Astro.params,
	storyblokApi = useStoryblokApi(),
	{ data } = await storyblokApi.get(
		`cdn/stories/${slug === undefined ? 'home' : slug}`,
		{
			version: import.meta.env.DEV ? 'draft' : 'published',
			resolve_links: 'url',
			resolve_relations: [
				'block_bento_plaques.plaques',
				'image_hanging_insight.insight',
				'insight.author',
				'carousel_people.people',
				'person.byline',
				'section_latest.insights',
				'insight.author',
			],
		},
	),
	page = data.story,
	content = page.content,
	seo = content.seo[0]
---

<Base
	pageTitle={seo.title}
	pageDescription={seo.description}
	pageThumbnail={seo.thumbnail.filename}>
	<StoryblokComponent blok={content} />
</Base>
