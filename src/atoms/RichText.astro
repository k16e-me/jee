---
import { richTextResolver } from '@storyblok/richtext'
import Prose from '@atoms/Prose.astro'
import { _fontSize } from '@scripts/font-size'

const { render } = richTextResolver()
const {
	text,
	pType,
	post,
	weight = 'regular',
	color = 'body',
	class: classes,
	...props
} = Astro.props
const html = render(text)
---

<Prose
	class:list={[
		pType === '1hx' && _fontSize('1hx'),
		pType === '2hx' && _fontSize('2hx'),
		pType === 'copy' && _fontSize('copy'),
		pType === 'emphasis' && _fontSize('emphasis'),
		pType === 'body' && _fontSize('body'),
		pType === 'blurb' && _fontSize('blurb'),
		weight === 'regular' && 'font-normal',
		weight === 'medium' && 'font-medium',
		weight === 'semi' && 'font-semibold',
		weight === 'bold' && 'font-bold',
		weight === 'extra' && 'font-extrabold',
		color === 'caption' && 'text-[var(--color-text-caption)]',
		color === 'body' && 'text-[var(--color-text-body)]',
		color === 'title' && 'text-[var(--color-text-title)]',
		post &&
			'prose-blockquote:border-l-0 prose-blockquote:border-y-2 prose-blockquote:py-2 prose-blockquote:my-8 ml:prose-blockquote:my-10 lg:prose-blockquote:my-12 prose-blockquote:border-[var(--color-border-muted)] prose-blockquote:text-center [&>blockquote>p:first-of-type]:text-2xl prose-h3:text-2xl prose-h4:text-xl [&>*]:empty:hidden',
		classes,
	]}
	{...props}>
	<Fragment set:html={html} />
</Prose>
