---
import Icon from '@atoms/Icon.astro'
import { _fontSize } from '@scripts/font-size'

const { label, icon, id, style = 'default', class: classes, ...props } = Astro.props
---

<div class:list={['', classes]} {...props}>
	<label set:text={label} for={id} class='sr-only' />
	<div class='relative mt-2 rounded-md shadow-sm'>
		<div
			class='pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3'>
			<Icon
				name='search'
				class='text-[var(--color-text-muted)] size-5'
				aria-hidden='true'
			/>
		</div>
		<input
			type={id}
			name={id}
			id={id}
			class:list={[
				'block w-full rounded-lg border-0 py-3 pl-10 text-[var(--color-text-body)] ring-1 ring-inset ring-[var(--color-border-subtle)] placeholder:text-[var(--color-text-muted)] focus:ring-2 focus:ring-inset focus:ring-[var(--color-emphasis)]',
				_fontSize('body'),
			]}
			placeholder='Search a JEE'
		/>
	</div>
</div>
