---
import Icon from '@atoms/Icon.astro'

const { top = true, class: classes, ...props } = Astro.props
---

<div
	class:list={[
		'fixed -left-1 md:-left-[21rem] lg:-left-[24rem] xl:-left-[19rem]',
		top && 'top-[25%] xs:top-[30%] sm:top-[26.5%] md:top-[40%] lg:top-[32%] xl:top-[34%]',
        classes
	]}
	{...props}>
	<Icon
		name='cutout-down'
		class='w-[40rem] md:w-[45rem] lg:w-[58rem] scale-110 sm:scale-125 md:scale-105 lg:scale-100 h-auto text-[var(--color-main)]'
	/>
</div>
