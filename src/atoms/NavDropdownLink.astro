---
import { _fontSize } from '@scripts/font-size'

const { tag = 'a', label, class: classes, ...props } = Astro.props,
	Tag = tag
---

<Tag
	class:list={[
		'block py-1.5 text-[var(--color-text-body)] group-hover/list:text-[var(--color-text-emphasis)] [&.active]:text-[var(--color-text-emphasis)] opacity-80 group-hover/list:opacity-100 [&.active]:opacity-100 font-medium',
		_fontSize('blurb'),
		classes,
	]}
	{...props}>
	<span set:text={label} class='block' />
</Tag>
