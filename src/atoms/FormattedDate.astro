---
import Text from '@atoms/Text.astro'

const { dateString, color = 'caption', size = '6', family = 'display', tighten = true, weight = 'semi', class: classes, ...props } = Astro.props,
	date = new Date(dateString),
    isoString = date.toISOString(),
	formattedDate = date.toLocaleDateString('en-EN', {
		day: 'numeric',
		month: 'short',
		year: 'numeric'
	})
---

<Text
	tag='time'
	datetime={isoString}
	text={formattedDate}
	{...props}
	color={color}
	size={size}
	family={family}
	weight={weight}
	tighten={tighten}
/>
