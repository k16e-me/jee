---
import Icon from '@atoms/Icon.astro'

const {
		tag = 'button',
		label,
		icon,
		style = 'default',
		flipIcon,
		bounceIcon,
		class: classes,
		...props
	} = Astro.props,
	Tag = tag
---

<Tag
	class:list={[
		'w-11 h-11 flex items-center justify-center group rounded-full',
		classes,
		style === 'default' &&
			'bg-[var(--color-bg-default-elevated)] text-[var(--color-text-emphasis)]',
		style === 'blank' && 'bg-transparent text-[var(--color-text-body)]',
		style === 'blank-brand' &&
			'bg-transparent text-[var(--color-text-emphasis)]',
		style === 'neutral' &&
			'bg-transparent text-white',
		style === 'brand' && 'bg-[var(--color-emphasis)] text-white',
		style === 'brand-inverted' &&
			'bg-[var(--color-main-inverted)] text-white',
	]}
	{...props}
	aria-label={label}>
	<Icon
		name={icon}
		class:list={[
			'w-[1.4375rem] text-inherit group-hover:scale-[1.15] group-hover/link:scale-[1.15] block',
			flipIcon && 'rotate-90',
			bounceIcon && 'group-hover:animate-bounce [animation-fill-mode:both] duration-300',
		]}
	/>
</Tag>
