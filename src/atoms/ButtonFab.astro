---
import Icon from '@atoms/Icon.astro'

const {
	link,
	icon,
	style = 'default',
	flipIcon,
	class: classes,
	...props
} = Astro.props
---

<button
	class:list={[
		'w-10 h-10 flex items-center justify-center group rounded-full',
		classes,
		style === 'default' &&
			'bg-[var(--color-bg-default-elevated)] text-[var(--color-text-emphasis)]',
		style === 'blank' && 'bg-transparent text-[var(--color-text-body)]',
	]}
	{...props}
	aria-label={link.label}>
	<Icon
		name={icon}
		class:list={[
			'w-[22px] text-inherit group-hover:scale-110 block transition duration-300',
            flipIcon && 'rotate-90'
		]}
	/>
</button>
