---
import { Image } from 'astro:assets'

const {
	filter = true,
	filename,
	alt,
	loading = 'eager',
	contain,
	top,
	bottom,
	class: classes,
	...props
} = Astro.props
---

<Image
	src={filename}
	alt={alt}
	widths={[576, 768, 960, 1280]}
	layout='responsive'
	quality={'high'}
	inferSize
	draggable='false'
	loading={loading}
	class:list={[
		'w-full max-w-full',
		filter && 'saturate-[.8] sepia-[7%] grayscale-[5%]',
		contain ? 'object-contain' : 'object-cover',
		top && !bottom ? 'object-top' : 'object-center',
		bottom && 'object-bottom',
		classes,
	]}
	{...props}
/>
