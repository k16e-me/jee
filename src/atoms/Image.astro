---
import { Image } from 'astro:assets'

const {
	filter = true,
	filename,
	alt,
	loading = 'eager',
	contain,
	top,
	bottom,
	class: classes,
	...props
} = Astro.props
---

<Image
	src={filename}
	alt={alt}
	widths={[576, 768, 1024]}
	width='1280'
	height='1024'
	sizes={`(max-width: 475px) 576px,
        (max-width: 640px) 768px,
        (max-width: 768px) 1024px`}
	quality={'high'}
	draggable='false'
	loading={loading}
	class:list={[
		'w-full max-w-full',
		filter && 'saturate-[.8] sepia-[7%] grayscale-[5%]',
		contain ? 'object-contain' : 'object-cover',
		top && !bottom ? 'object-top' : 'object-center',
		bottom && 'object-bottom',
		classes,
	]}
	{...props}
/>
