---
import { Image } from 'astro:assets'

const {
	filter = true,
	filename,
	alt,
	loading = 'eager',
	contain,
	top,
	class: classes,
	...props
} = Astro.props
---

<Image
	src={filename}
	alt={alt}
	widths={[576, 768, 960, 1280, 1440]}
	sizes={`(max-width: 475px) 576px,
        (max-width: 640px) 768px,
        (max-width: 768px) 960px,
        (max-width: 1024px) 1280px,
        (max-width: 1280px) 1440px`}
	quality={'high'}
	inferSize
	draggable='false'
	loading={loading}
	class:list={[
		'w-full max-w-full',
		filter && 'saturate-[.8] sepia-[7%] grayscale-[5%]',
		contain ? 'object-contain' : 'object-cover',
		top ? 'object-top' : 'object-center',
		classes,
	]}
	{...props}
/>
