---
import Icon from "@atoms/Icon.astro";
import { _fontSize } from "@scripts/lib/font-size";

const {
  label,
  id,
  name,
  checked,
  required,
  class: classes,
  ...props
} = Astro.props;
---

<p
  class:list={["flex items-center cursor-pointer w-full", classes]}
  {...props}
>
  <input
    type="checkbox"
    value={id}
    name={`${name}` + "[]"}
    id={id}
    class:list={[
      "h-4 w-4 border-(--color-border-subtle) text-(--color-emphasis) focus:ring-(--color-emphasis)",
      _fontSize("blurb"),
    ]}
    checked={checked}
  />
  <label
    set:text={label}
    for={id}
    class:list={[
      "pl-3 block font-medium font-display text-(--color-text-body) w-full",
      _fontSize("blurb"),
    ]}
  />
</p>
