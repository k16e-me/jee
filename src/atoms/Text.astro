---
import { _fontSize } from '@scripts/font-size'

const {
		tag = 'span',
		text,
		size = 'body',
		family = 'sans',
		uppercase,
		weight = 'regular',
		tighten,
		loosen,
		color,
		class: classes,
		...props
	} = Astro.props,
	Tag = tag
---

<Tag
	set:html={text}
	{...props}
	class:list={[
		// Font Sizes
		size === '2' &&
			'text-[1.875rem] leading-[1.975rem] md:text-[3.775rem] md:leading-[4.09375rem] lg:text-[4.25rem] lg:leading-[4.515rem]',
		size === '3' &&
			'text-[1.775rem] leading-[2rem] md:text-[2.75rem] md:leading-[2.875rem] lg:text-[3.15rem] lg:leading-[3.375rem]',
		size === '4' && _fontSize('s4'),
		size === 's4-upper' && _fontSize('s4-upper'),
		size === '5' &&
			'text-[1.475rem] leading-[1.675rem] sm:text-[1.575rem] sm:leading-[1.8775rem] md:text-[1.6625rem] md:leading-[1.955rem] lg:text-[1.875rem] lg:leading-[2.25rem]',
		(size === '1hx' || size === 'sx1') && _fontSize('sx1'),
		size === '6' && _fontSize('s6'),
		size === 'copy' && _fontSize('copy'),
		size === 'emphasis' && _fontSize('emphasis'),
		size === 'body' && _fontSize('body'),
		size === 'blurb' && _fontSize('blurb'),
		size === 'footnote' && _fontSize('footnote'),
		size === 'emphasis-upper' && 'text-[0.975rem] leading-[1rem]',
		size === 'button' && 'text-[0.935rem] leading-[1.175rem]',

		family === 'sans' && 'font-sans',
		family === 'display' && 'font-display',

		// Font Weights
		weight === 'regular' && 'font-normal',
		weight === 'medium' && 'font-medium',
		weight === 'semi' && 'font-semibold',
		weight === 'bold' && 'font-bold',
		weight === 'extra' && 'font-extrabold',

		// Colors
		color === 'emphasis' && 'text-[var(--color-emphasis)]',
		color === 'title' && 'text-[var(--color-text-title)]',
		color === 'title-light' && 'text-[var(--color-lightest)]',
		color === 'body' && 'text-[var(--color-text-body)]',
		color === 'body-light' && 'text-[var(--color-muted)]',
		color === 'caption' && 'text-[var(--color-text-caption)]',
		color === 'accent' && 'text-[var(--color-accent)]',
		color === 'white' && 'text-white',

		// Booleans
		uppercase && 'uppercase',
		tighten && 'tracking-[-0.02em]',
		loosen && 'tracking-[0.085em]',

		// Classes Passed In
		classes,
	]}
/>
