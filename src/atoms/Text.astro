---
const {
		tag = 'span',
		text,
		size = 'body',
		family = 'sans',
		uppercase,
		weight = 'regular',
		tighten,
		loosen,
		color,
		class: classes,
		...props
	} = Astro.props,
	Tag = tag
---

<Tag
	set:html={text}
	{...props}
	class:list={[
		// Font Sizes
		size === '2' &&
			'text-[1.875rem] leading-[1.975rem] md:text-[3.775rem] md:leading-[4.09375rem] lg:text-[4.25rem] lg:leading-[4.515rem]',
		size === '3' &&
			'text-[1.775rem] leading-[2rem] md:text-[2.75rem] md:leading-[2.875rem] lg:text-[3.25rem] lg:leading-[3.4375rem]',
		size === '5' &&
			'text-[1.475rem] leading-[1.7775rem] sm:text-[1.575rem] sm:leading-[1.8775rem] md:text-[1.6625rem] md:leading-[1.955rem] lg:text-[1.875rem] lg:leading-[2.25rem]',
		size === '6' &&
			'text-[1.0625rem] lg:text-[1.125rem] leading-[1.3125rem]',
		size === 'copy' &&
			'text-[1.0625rem] leading-[1.375rem] lg:text-[1.125rem] lg:leading-6',
		size === 'emphasis' &&
			'text-[0.9375rem] lg:text-[1rem] leading-5 lg:leading-[1.3125rem]',
		size === 'footnote' && 'text-[0.875rem] leading-[1.0625rem]',
		size === 'body' && 'text-[1rem] leading-[1.4375rem]',
		size === 'button' && 'text-[0.935rem] leading-[1.175rem]',

		family === 'sans' && 'font-sans',
		family === 'display' && 'font-display',

		// Font Weights
		weight === 'regular' && 'font-normal',
		weight === 'medium' && 'font-medium',
		weight === 'semi' && 'font-semibold',
		weight === 'bold' && 'font-bold',
		weight === 'extra' && 'font-extrabold',

		// Colors
		color === 'title' && 'text-[var(--color-text-title)]',
		color === 'body' && 'text-[var(--color-text-body)]',
		color === 'body-light' && 'text-[var(--color-muted)]',
		color === 'caption' && 'text-[var(--color-text-caption)]',
		color === 'white' && 'text-white',

		// Booleans
		uppercase && 'uppercase',
		tighten && 'tracking-[-0.03em]',
		loosen && 'tracking-[0.15em]',

		// Classes Passed In
		classes,
	]}
/>
