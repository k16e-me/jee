---
import { _fontSize } from '@scripts/lib/font-size'

const {
	tag = 'span',
	text,
	size = 'body',
	family = 'sans',
	uppercase,
	weight = 'regular',
	italic,
	tighten,
	loosen,
	color,
	class: classes,
	...props
} = Astro.props
const Tag = tag
---

<Tag
	set:html={text}
	{...props}
	class:list={[
		// Font Sizes
		size === '2' && _fontSize('2'),
		size === '3' && _fontSize('3'),
		size === '4' && _fontSize('s4'),
		size === 's4-upper' && _fontSize('s4-upper'),
		size === '5' && _fontSize('s5'),
		(size === '2hx' || size === 'sx2') && _fontSize('sx2'),
		(size === '1hx' || size === 'sx1') && _fontSize('sx1'),
		size === '6' && _fontSize('s6'),
		size === 'copy' && _fontSize('copy'),
		size === 'emphasis' && _fontSize('emphasis'),
		size === 'body' && _fontSize('body'),
		size === 'blurb' && _fontSize('blurb'),
		size === 'footnote' && _fontSize('footnote'),
		size === 'emphasis-upper' && _fontSize('emphasis-upper'),
		size === 'button' && _fontSize('button'),

		family === 'sans' && 'font-sans',

		// Font Weights
		weight === 'regular' && 'font-normal',
		weight === 'medium' && 'font-medium',
		weight === 'semi' && 'font-semibold',
		weight === 'bold' && 'font-bold',
		weight === 'extra' && 'font-extrabold',

		// Colors
		color === 'emphasis' && 'text-[var(--color-emphasis)]',
		color === 'title' && 'text-[var(--color-text-title)]',
		color === 'title-light' && 'text-parchment-50',
		color === 'body' && 'text-[var(--color-text-body)]',
		color === 'body-light' && 'text-[var(--color-muted)]',
		color === 'caption' && 'text-[var(--color-text-caption)]',
		color === 'accent' && 'text-[var(--color-accent)]',
		color === 'white' && 'text-white',

		// Booleans
		uppercase && 'uppercase',
		tighten && '-tracking-[0.0225em]',
		loosen && 'tracking-[0.085em]',
		italic && 'italic',

		// Classes Passed In
		classes,
	]}
/>
