---
import Icon from '@atoms/Icon.astro'

const { top, bottom = true, class: classes, ...props } = Astro.props
---

<div
	class:list={[
		'absolute -right-16',
		bottom && 'bottom-[-85%] md:bottom-[-140%] xl:bottom-[-130%]',
        top && 'top-[88%] sm:top-[85%] md:top-[77%] lg:top-[60%] xl:top-[40%]'
	]}>
	<Icon
		name='cutout-up'
		class='w-[560px] md:w-[720px] lg:w-[920px] scale-105 h-auto text-[var(--color-main)]'
	/>
</div>
