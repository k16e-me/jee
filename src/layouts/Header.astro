---
import Icon from '@atoms/Icon.astro'
import NavDesktop from '@blocks/NavDesktop.astro'

const { nav, class: classes, ...attrs } = Astro.props
---

<header class:list={['h-[104px] px-3 md:px-6 lg:px-20', classes]} {...attrs}>
	<nav
		class='grid grid-cols-4 md:grid-cols-8 lg:grid-cols-12 gap-3 md:gap-8 lg:gap-20 h-full items-center'>
		<div
			class='col-span-2 md:col-span-3 lg:col-span-3 justify-self-start w-full'>
			<a href='/'>
				<Icon name='logo' class='h-8 md:h-10 lg:h-12' />
			</a>
		</div>
		<NavDesktop
			links={nav}
			class='hidden lg:flex lg:col-span-7 lg:col-start-4 w-full justify-end'
		/>
		<div
			class='col-span-2 md:col-span-5 lg:col-span-2 lg:col-start-11 justify-self-end'>
			Tools here...
		</div>
	</nav>
</header>
