---
const { tag = 'div', grid = '4-8-12', split = '', class: classes, ...props } = Astro.props,
	Tag = tag
---

<Tag
	class:list={[
		'grid gap-x-3 md:gap-x-6 lg:gap-x-8 h-full',
        grid === '4-8-12' && 'grid-cols-4 md:grid-cols-8 lg:grid-cols-12',
        grid === '4-12-12' && 'grid-cols-4 ml:grid-cols-12',
        split === 'sidebar' && `
            [&>*]:col-span-full
            [&>:first-child]:xl:[grid-area:1/1/2/4] [&>:last-child]:xl:[grid-area:1/4/2/13]`,
		classes,
	]}
	{...props}>
	<slot/>
</Tag>
