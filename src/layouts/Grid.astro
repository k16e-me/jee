---
import { _gridGap } from '@scripts/snips'

const {
    tag = 'div',
    grid = '4-8-12',
    split = '',
    class: classes,
    ...props
} = Astro.props
const Tag = tag
---

<Tag
	class:list={[
		'grid h-full',
        _gridGap('x'),
		grid === '4-8-12' && 'grid-cols-4 md:grid-cols-8 lg:grid-cols-12',
		grid === '4-12-12' && 'grid-cols-4 ml:grid-cols-12',
        grid === '1-2-3' && 'grid-cols-1 sm:grid-cols-2 md:grid-cols-3',
		split === 'sidebar' &&
			`
            [&>*]:col-span-full
            [&>:first-child]:xl:[grid-area:1/1/2/4] [&>:last-child]:xl:[grid-area:1/4/2/13]`,
		classes,
	]}
	{...props}>
	<slot />
</Tag>
