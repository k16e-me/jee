---
import { _sectionPadding } from '@scripts/snips'

const {
	component = null,
	title,
	poster,
	header,
	section = true,
	overlap,
	id,
	spy = false,
	class: classes,
	...props
} = Astro.props
---

<section
	class:list={[
		`_section _section-${component} relative`,
		poster && 'pt-10 lg:pt-14',
		header && 'pt-[1.75rem] lg:pt-[3.25rem]',
		(poster || header) && _sectionPadding('bottom'),
		section & !overlap && _sectionPadding('both'),
		section & overlap && _sectionPadding('bottom'),
		classes,
	]}
	id={id}
	{...spy ? { 'data-spy': '' } : {}}
	{...props}>
	{title && <h2 set:text={title} class='sr-only' />}
	<slot />
</section>
