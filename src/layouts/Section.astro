---
import { _sectionPadding } from '@scripts/snips'

const {
	component = null,
	title,
	poster,
	section = true,
	class: classes,
	...props
} = Astro.props
---

<section
	class:list={[
		`_section _section-${component} relative`,
		poster && 'pt-8 lg:pt-12 xl:pt-14',
        poster && _sectionPadding('bottom'),
		section && 'py-8 md:py-14 lg:py-20',
		classes,
	]}
	{...props}>
	{title && <h2 set:text={title} class='sr-only' />}
	<slot />
</section>
