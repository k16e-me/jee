---
import { _xPadding } from '@scripts/snips'

const {
		tag = 'div',
		margins = true,
		negateMargin = false,
		inset,
		marginsMd,
		class: classes,
		...props
	} = Astro.props,
	Tag = tag
---

<Tag
	class:list={[
		margins && _xPadding(),
		negateMargin && 'md:px-2 lg:px-6 xl:px-16',
		inset && '[&>*]:xl:px-16',
		marginsMd && 'md:px-8 lg:px-16',
		classes,
	]}
	{...props}>
	<slot />
</Tag>
