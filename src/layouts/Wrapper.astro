---
import { _xPadding } from '@scripts/snips'

const {
    tag,
    margins = true,
    negateMargin = false,
    inset,
    marginsMd,
    class: classes,
    ...props
} = Astro.props
const Tag = tag || 'div'
---

<Tag
	class:list={[
		margins && !marginsMd && !negateMargin && _xPadding(),
		negateMargin && 'md:px-2 lg:px-6 xl:px-16',
		inset && '[&>*]:xl:px-16',
		marginsMd && _xPadding('both-md-up'),
		classes,
	]}
	{...props}>
	<slot />
</Tag>
