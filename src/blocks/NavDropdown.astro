---
import Icon from '@atoms/Icon.astro'
import _slug from '@scripts/slug'
import _slugify from '@scripts/slugify'
import _empty from '@scripts/empty'
import NavDropdownExpertise from '@blocks/NavDropdownExpertise.astro'
import NavDropdownInsights from '@blocks/NavDropdownInsights.astro'

const { child, links, class: classes, ...props } = Astro.props
---

<ul
	class:list={[
		classes,
		'absolute left-1/2 right-0 z-50 min-w-[224px] w-full max-w-min -translate-x-1/2 p-4 overflow-hidden rounded-3xl bg-white shadow ring-1 ring-[var(--color-bg-default-elevated)]',
	]}
	{...props}>
	{child === 'expertise' && <NavDropdownExpertise class='' />}
	{child === 'insights-innovation' && <NavDropdownInsights class='' />}
</ul>
