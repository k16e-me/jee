---
import Icon from '@atoms/Icon.astro'
import _slug from '@scripts/slug'
import _slugify from '@scripts/slugify'
import _empty from '@scripts/empty'
import NavDropdownExpertise from '@blocks/NavDropdownExpertise.astro'
import NavDropdownInsights from '@blocks/NavDropdownInsights.astro'

const { child, links, class: classes, ...props } = Astro.props
---

<ul
	class:list={[
		classes,
		'invisible opacity-0 translate-y-4 scale-95 group-hover/li:visible group-hover/li:opacity-100 group-hover/li:translate-y-0 group-hover/li:scale-100 duration-[250ms] group-hover/li:duration-[350ms] ease-in-out group-hover/li:transition absolute left-1/2 z-50 w-screen max-w-max -translate-x-1/2 p-8 overflow-hidden rounded-[2rem] bg-white shadow ring-1 ring-[var(--color-bg-default-elevated)]',
	]}
	{...props}>
	{child === 'expertise' && <NavDropdownExpertise links={links} />}
	{child === 'insights-innovation' && <NavDropdownInsights links={links} />}
</ul>
