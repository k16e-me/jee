---
import ButtonFab from '@atoms/ButtonFab.astro'

const { class: classes, ...props } = Astro.props
---

<div
	class:list={[
		'fixed w-full md:w-auto r-hide-overflow bottom-0 z-[150] p-4 md:p-0 md:bottom-auto left-1/2 -translate-x-1/2 md:top-24 transition duration-300 ease-in-out translate-y-full scale-90 opacity-0 invisible',
		classes,
	]}
	aria-labelledby='modal-title'
	role='dialog'
	aria-modal='true'
	{...props}>
	<div
		class='relative overflow-auto rounded-2xl md:rounded-[2rem] bg-[var(--color-bg-default)] shadow-xl transition-all w-full sm:w-[36rem] h-[32.5rem] md:h-[36rem] px-4 py-6 md:py-8 sm:p-10'>
        <ButtonFab data-modal-close class='fixed top-3 right-3' icon='close-x'/>
		<slot />
	</div>
</div>
