---
import ButtonFab from '@atoms/ButtonFab.astro'

const { class: classes, ...props } = Astro.props
---

<div
	class:list={[
		'fixed w-full md:w-auto r-hide-overflow bottom-0 z-[150] p-4 md:p-0 md:bottom-auto left-1/2 -translate-x-1/2 md:top-24 transition duration-300 ease-in-out translate-y-full scale-90 opacity-0 invisible flex justify-center',
		classes,
	]}
	aria-labelledby='modal-title'
	role='dialog'
	aria-modal='true'
	id='modal'
	{...props}>
	<div
		class='relative overflow-auto rounded-[1.5rem] bg-(--color-bg-default) shadow-xl transition-all w-full sm:w-[36rem] h-[36rem] p-4 sm:py-6 sm:p-8'>
		<div class='sr-only md:not-sr-only'>
			<ButtonFab
				data-modal-close
				class='fixed top-1 right-1'
				icon='close-x'
				style='neutral-dark'
				size='mini'
			/>
		</div>
		<slot />
	</div>
</div>
