---
import Icon from '@atoms/Icon.astro'
import Text from '@atoms/Text.astro'

const { icon, text, class: classes, ...props } = Astro.props
---

<div class='flex gap-1 sm:gap-1.5'>
	<Icon name={icon} class='size-5 text-[var(--color-emphasis)]' />
	<Text
		text={text}
		color='body'
		size='blurb'
		family='display'
		weight='medium'
	/>
</div>
