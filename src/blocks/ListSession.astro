---
import Text from '@atoms/Text.astro'
import CardCapsule from './CardCapsule.astro'
import HeadingStretch from './HeadingStretch.astro'

const { heading, duration, person, class: classes, ...props } = Astro.props
---

<div class:list={['flex flex-col gap-3', classes]} {...props}>
	<HeadingStretch tag='h4' text={heading} size='2hx' />
	<div class='flex flex-col gap-4'>
		<Text
			tag='p'
			text={duration}
			color='body'
			size='emphasis'
			weight='medium'
		/>
		<CardCapsule entry={person} adjustWidth={false} fill={false} top />
	</div>
</div>
