---
import RichText from '@atoms/RichText.astro'
import Text from '@atoms/Text.astro'

const { quote, class: classes, ...props } = Astro.props
---

<div class:list={['flex flex-col gap-y-5 md:gap-y-6 lg:gap-y-8', classes]} {...props}>
	<Text
		tag='p'
		text={quote.quote}
		color='title'
		size='5'
		weight='medium'
	/>
	<div class='flex flex-col -space-y-0.5'>
		<Text
			tag='p'
			text={quote.author[0].name}
			color='title'
			size='copy'
			weight='semi'
            family='display'
		/>
		<Text
			tag='p'
			text={quote.author[0].designation}
			color='caption'
			size='copy'
			weight='medium'
            family='display'
		/>
	</div>
</div>
