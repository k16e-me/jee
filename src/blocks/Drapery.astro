---
import ButtonFab from '@atoms/ButtonFab.astro'
import Wrapper from '@layouts/Wrapper.astro'

const { class: classes, ...props } = Astro.props
---

<div
	class:list={[
		'fixed inset-0 w-screen h-screen bg-[var(--color-surface-dark)] z-[200] transition-all duration-300 ease-in-out -translate-y-full scale-95 opacity-0 invisible overflow-hidden',
		classes,
	]}
	aria-labelledby='modal-title'
	role='dialog'
	aria-modal='true'
	{...props}>
	<Wrapper class='relative overflow-auto'>
		<ul
			class='h-[var(--spacing-1)] md:h-[var(--spacing-2)] w-full lg:h-[var(--spacing-3)] flex items-center justify-end translate-x-1 sm:translate-x-2 lg:translate-x-0'>
			<li class='h-full w-11 flex items-center justify-center relative'>
				<ButtonFab
					style='neutral'
					label='Close Mobile Menu'
					icon='close-x'
					data-close-menu
				/>
			</li>
		</ul>
		<slot />
	</Wrapper>
</div>
