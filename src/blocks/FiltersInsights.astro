---
import Icon from "@atoms/Icon.astro";
import InputCheck from "@atoms/InputCheck.astro";
import InputRadio from "@atoms/InputRadio.astro";
import Text from "@atoms/Text.astro";
import _slugify from "@scripts/slugify";
import HeadingSection from "@blocks/HeadingSection.astro";

const {
  links,
  categories,
  sectors,
  practices,
  people,
  selectedItems,
  class: classes,
  ...props
} = Astro.props;

const expertise = [...sectors, ...practices];

const {
  categories: categoriesFromParams,
  expertise: expertiseFromParams,
  people: peopleFromParams,
} = selectedItems;
---

<div class:list={["pt-6", classes]} {...props}>
  <HeadingSection
    text={"Filters"}
    size="6"
    weight="semi"
    padding="small"
    hasResetButton
  />
  <ul>
    <li class="accordion group border-b border-[var(--color-border-muted)]">
      <div
        class="accordion__button r-transition flex items-center justify-between h-14 cursor-pointer"
        aria-expanded="false"
      >
        <Text tag="p" text="Categories" color="body" weight="semi" />
        <Icon
          name="caret-down"
          aria-hidden="true"
          class="accordion__icon block w-5 text-[var(--color-text-caption)] opacity-70 group-hover/button:opacity-100 shrink-0 transition-all group-[.is-active]:opacity-100"
        />
      </div>
      <div
        class="accordion__content overflow-hidden max-h-0 transition-all ease-in-out"
      >
        <fieldset
          class="max-w-full pt-1 px-4 pb-4 transition-[height] duration-300"
        >
          <legend set:text="Filter JEE Insights by Category" class="sr-only" />
          <div class="space-y-3">
            {
              categories.map((i) => (
                <InputCheck
                  label={i}
                  id={_slugify(i)}
                  name="categories"
                  checked={categoriesFromParams.includes(_slugify(i))}
                />
              ))
            }
          </div>
        </fieldset>
      </div>
    </li>
    <li class="accordion group border-b border-[var(--color-border-muted)]">
      <div
        class="accordion__button r-transition flex items-center justify-between h-14 cursor-pointer"
        aria-expanded="false"
      >
        <Text tag="p" text="Expertise" color="body" weight="semi" />
        <Icon
          name="caret-down"
          aria-hidden="true"
          class="accordion__icon block w-5 text-[var(--color-text-caption)] opacity-70 group-hover/button:opacity-100 shrink-0 transition-all group-[.is-active]:opacity-100"
        />
      </div>
      <div
        class="accordion__content overflow-hidden max-h-0 transition-all ease-in-out"
      >
        <fieldset
          class="max-w-full pt-1 px-4 pb-4 transition-[height] duration-300"
        >
          <legend set:text="Filter JEE Insights by Practices" class="sr-only" />
          <div class="space-y-3">
            {
              expertise.map((i) => (
                <InputCheck
                  label={i}
                  id={_slugify(i)}
                  name="expertise"
                  checked={expertiseFromParams.includes(_slugify(i))}
                />
              ))
            }
          </div>
        </fieldset>
      </div>
    </li>
    <li class="accordion group border-b border-[var(--color-border-muted)]">
      <div
        class="accordion__button r-transition flex items-center justify-between h-14 cursor-pointer"
        aria-expanded="false"
      >
        <Text tag="p" text="People" color="body" weight="semi" />
        <Icon
          name="caret-down"
          aria-hidden="true"
          class="accordion__icon block w-5 text-[var(--color-text-caption)] opacity-70 group-hover/button:opacity-100 shrink-0 transition-all group-[.is-active]:opacity-100"
        />
      </div>
      <div
        class="accordion__content overflow-hidden max-h-0 transition-all ease-in-out"
      >
        <fieldset
          class="max-w-full pt-1 px-4 pb-4 transition-[height] duration-300"
        >
          <legend set:text="Filter JEE Insights by People" class="sr-only" />
          <div class="space-y-3">
            {
              people.map((i) => (
                <InputCheck
                  label={i}
                  id={_slugify(i)}
                  name="people"
                  checked={peopleFromParams.includes(_slugify(i))}
                />
              ))
            }
          </div>
        </fieldset>
      </div>
    </li>
  </ul>
</div>
