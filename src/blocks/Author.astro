---
import Text from '@atoms/Text.astro'

const { source, class: classes, ...props } = Astro.props
---

<div class='flex items-center gap-3'>
	<Text
		text={source.content.author[0].name}
		color='title'
		size='1hx'
		family='display'
		weight='semi'
		tighten
	/>
	{
		source.content.author.length > 1 && (
			<Text
				text={`+${source.content.author.length - 1}`}
				color='body'
				size='1hx'
				family='display'
				weight='medium'
			/>
		)
	}
</div>
