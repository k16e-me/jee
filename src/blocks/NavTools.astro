---
import Icon from '@atoms/Icon.astro'
import ButtonFlat from '@atoms/ButtonFlat.astro'
import _slug from '@scripts/slug'
import _slugify from '@scripts/slugify'
import _empty from '@scripts/empty'
import ButtonFab from '@atoms/ButtonFab.astro'
import NavDropdownLink from '@atoms/NavDropdownLink.astro'
import NavDropdown from '@blocks/NavDropdown.astro'

const { links, class: classes, ...props } = Astro.props
---

<ul
	class:list={[
		classes,
		'flex items-center lg:items-start justify-end lg:pt-3.5 gap-2 sm:gap-3 translate-x-1 sm:translate-x-2 lg:translate-x-0',
	]}
	{...props}>
	<li class='hidden lg:flex group/li relative'>
		<ButtonFlat link={links[2]} />
		<NavDropdown child='client-hub' links={links[2].children} />
	</li>
	<li
		class='flex lg:flex-col items-center lg:items-start gap-2 sm:gap-3 lg:gap-0'>
		<ButtonFab link={links[1]} icon='africa' class='order-2 lg:order-1' />
		<ButtonFab
			style='blank'
			link={links[0]}
			label={links[0].label}
			icon='search'
			flipIcon
			class='order-1 lg:order-2'
		/>
	</li>
	<li class='h-full flex lg:hidden items-center'>
		<ButtonFab
			style='blank-brand'
			label='Trigger Mobile Menu'
			icon='menu'
		/>
	</li>
</ul>
