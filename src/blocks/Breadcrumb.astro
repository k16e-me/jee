---
import ButtonMore from '@atoms/ButtonMore.astro'
import Text from '@atoms/Text.astro'

const { link, page, class: classes, ...props } = Astro.props
---

<div class="flex items-center gap-3">
	<ButtonMore link={link[0].link} label={link[0].label} />
	<div
		class='px-3 pt-2 pb-[0.875rem] border-l-[1.5px] border-[var(--color-border-subtle)]'>
		<Text
			text={page}
			color='caption'
			size='emphasis-upper'
			family='display'
			weight='semi'
			loosen
			uppercase
			class=''
		/>
	</div>
</div>
