---
import ButtonFab from '@atoms/ButtonFab.astro'

const { class: classes, ...props } = Astro.props
---

<div
	class:list={[
		'fixed inset-y-0 right-4 lg:right-12 z-[150] flex flex-col justify-center items-center r-hide-overflow translate-x-full opacity-0 invisible transition-all duration-300 ease-in-out',
		classes,
	]}
	role='dialog'
	aria-modal='true'
	id='drawer'
	{...props}>
	<div
		class='relative r-hide-overflow rounded-2xl sm:rounded-t-[2rem] h-[calc(100vh-3.5rem)] bg-white w-[calc(100svw-2rem)] sm:w-[30rem] px-4 py-6 sm:px-6'>
		<ButtonFab
			class='fixed top-1 right-1'
			icon='close-x'
			style='neutral-dark'
			size='mini'
			data-drawer-close
		/>
		<slot />
	</div>
</div>
