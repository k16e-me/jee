---
import Icon from '@atoms/Icon.astro'
import InputCheck from '@atoms/InputCheck.astro'
import InputRadio from '@atoms/InputRadio.astro'
import Text from '@atoms/Text.astro'
import _slugify from '@scripts/slugify'
import HeadingSection from '@blocks/HeadingSection.astro'
import ButtonMore from '@atoms/ButtonMore.astro'

const {
	links,
	designations,
	locations,
	sectors,
	practices,
	selectedItems,

	class: classes,
	...props
} = Astro.props
const roles = [
	'Managing Partner',
	'Partner',
	'Managing Associate',
	'Business Support',
]
const {
	designation,
	practices: practicesFromParams,
	sectors: sectorsFromParams,
	offices,
} = selectedItems
---

<div class:list={['pt-6', classes]} {...props}>
	<HeadingSection
		text={'Filters'}
		level='h2'
		size='6'
		weight='semi'
		padding='small'
		hasResetButton
	/>
	<ul>
		<li class='accordion group border-b border-[var(--color-border-muted)]'>
			<div
				class='accordion__button r-transition flex items-center justify-between h-14 cursor-pointer'
				aria-expanded='false'>
				<Text tag='p' text='Roles' color='body' weight='semi' />
				<Icon
					name='caret-down'
					aria-hidden='true'
					class='accordion__icon block w-5 text-[var(--color-text-caption)] opacity-70 group-hover/button:opacity-100 shrink-0 transition-all group-[.is-active]:opacity-100'
				/>
			</div>
			<div
				class='accordion__content overflow-hidden max-h-0 transition-all ease-in-out'>
				<fieldset
					class='max-w-full pt-1 px-4 pb-4 transition-[height] duration-300'>
					<legend
						set:text='Sort JEE People by Role'
						class='sr-only'
					/>
					<div class='space-y-3'>
						{
							roles.map((i) => (
								<InputRadio
									label={i}
									id={_slugify(i)}
									name={'role'}
									checked={designation === _slugify(i)}
								/>
							))
						}
					</div>
				</fieldset>
			</div>
		</li>
		<li class='accordion group border-b border-[var(--color-border-muted)]'>
			<div
				class='accordion__button r-transition flex items-center justify-between h-14 cursor-pointer'
				aria-expanded='false'>
				<Text tag='p' text='Practices' color='body' weight='semi' />
				<Icon
					name='caret-down'
					aria-hidden='true'
					class='accordion__icon block w-5 text-[var(--color-text-caption)] opacity-70 group-hover/button:opacity-100 shrink-0 transition-all group-[.is-active]:opacity-100'
				/>
			</div>
			<div
				class='accordion__content overflow-hidden max-h-0 transition-all ease-in-out'>
				<fieldset
					class='max-w-full pt-1 px-4 pb-4 transition-[height] duration-300'>
					<legend set:text='JEE Practices' class='sr-only' />
					<div class='space-y-3'>
						{
							practices.map((i) => (
								<InputCheck
									label={i}
									id={_slugify(i)}
									name={'practices'}
									checked={practicesFromParams.includes(
										_slugify(i),
									)}
								/>
							))
						}
					</div>
				</fieldset>
			</div>
		</li>
		<li class='accordion group border-b border-[var(--color-border-muted)]'>
			<div
				class='accordion__button r-transition flex items-center justify-between h-14 cursor-pointer'
				aria-expanded='false'>
				<Text tag='p' text='Sectors' color='body' weight='semi' />
				<Icon
					name='caret-down'
					aria-hidden='true'
					class='accordion__icon block w-5 text-[var(--color-text-caption)] opacity-70 group-hover/button:opacity-100 shrink-0 transition-all group-[.is-active]:opacity-100'
				/>
			</div>
			<div
				class='accordion__content overflow-hidden max-h-0 transition-all ease-in-out'>
				<fieldset
					class='max-w-full pt-1 px-4 pb-4 transition-[height] duration-300'>
					<legend set:text='JEE Sectors' class='sr-only' />
					<div class='space-y-3'>
						{
							sectors.map((i) => (
								<InputCheck
									label={i}
									id={_slugify(i)}
									name={'sectors'}
									checked={sectorsFromParams.includes(
										_slugify(i),
									)}
								/>
							))
						}
					</div>
				</fieldset>
			</div>
		</li>
		<li class='accordion group border-b border-[var(--color-border-muted)]'>
			<div
				class='accordion__button r-transition flex items-center justify-between h-14 cursor-pointer'
				aria-expanded='false'>
				<Text tag='p' text='Locations' color='body' weight='semi' />
				<Icon
					name='caret-down'
					aria-hidden='true'
					class='accordion__icon block w-5 text-[var(--color-text-caption)] opacity-70 group-hover/button:opacity-100 shrink-0 transition-all group-[.is-active]:opacity-100'
				/>
			</div>
			<div
				class='accordion__content overflow-hidden max-h-0 transition-all ease-in-out'>
				<fieldset
					class='max-w-full pt-1 px-4 pb-4 transition-[height] duration-300'>
					<legend set:text='Offices of JEE Lawyers' class='sr-only' />
					<div class='space-y-3'>
						{
							locations.map((i) => (
								<InputCheck
									label={i}
									id={_slugify(i)}
									name={'offices'}
									checked={offices.includes(_slugify(i))}
								/>
							))
						}
					</div>
				</fieldset>
			</div>
		</li>
	</ul>
	<ButtonMore
		tag='button'
		type='submit'
		label='View Results'
		class='hidden'
	/>
</div>
