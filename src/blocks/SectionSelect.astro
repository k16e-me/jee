---
import { _fontSize } from "@scripts/font-size"
import _slugify from "@scripts/slugify"

const { headings, class: classes, ...props } = Astro.props
---

<div class:list={['', classes]} {...props}>
	<label for='navigate-page' class='sr-only' set:text='Navigate Page' />
	<select
		id='navigate-page'
		name='navigate-page'
		class:list={[
			'block w-full rounded-md border-0 py-3 pl-3 pr-9 text-gray-900 ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-[var(--color-emphasis)]',
			_fontSize('emphasis'),
		]}>
		{
			headings.map((h, idx) => (
				<option
					set:text={h}
					selected={idx === 0}
					data-section={_slugify(h)}
				/>
			))
		}
	</select>
</div>
