---
import ButtonFab from '@atoms/ButtonFab.astro'
import Text from '@atoms/Text.astro'

const {
	text,
	level,
	underline = true,
	hasCarouselControls,
	size,
	class: classes,
	...props
} = Astro.props
---

<div
	class:list={[
		'flex items-center justify-between',
		underline &&
			'border-b border-[var(--color-border-accent)] pb-1.5 md:pb-2.5',
		classes,
	]}
	{...props}>
	<Text
		tag={level}
		text={text}
		color='title'
		size={size}
		family='display'
		weight='bold'
		tighten
		class=''
	/>
	{
		hasCarouselControls && (
			<div class="flex items-center gap-2">
				<ButtonFab
					style='brand'
					label='Control Carousel'
					icon='caret-left'
					class='swiper-prev'
				/>
				<ButtonFab
					style='brand'
					label='Control Carousel'
					icon='caret-right'
					class='swiper-next'
				/>
			</div>
		)
	}
</div>
