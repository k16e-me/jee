---
import Section from '@layouts/Section.astro'
import Wrapper from '@layouts/Wrapper.astro'
import Grid from '@layouts/Grid.astro'
import BlockBentoBasic from '@blocks/BlockBentoBasic.astro'
import BlockBentoPlaques from '@blocks/BlockBentoPlaques.astro'
import BlockBentoHighlights from '@blocks/BlockBentoHighlights.astro'
import { _gridGap, _sectionPadding } from '@scripts/snips'
import Image from '@atoms/Image.astro'
import Quote from '@blocks/Quote.astro'
import Icon from '@atoms/Icon.astro'
import ButtonFab from '@atoms/ButtonFab.astro'
import SwiperQuotes from '@blocks/SwiperQuotes.astro'

const { blok, class: classes, ...props } = Astro.props
const quotes = blok.quotes
---

<Section component={blok.component} title={blok.heading} class=''>
	<Wrapper margins={false}>
		<Grid>
			<div
				class='col-span-full ml:[grid-area:1/1/2/5] lg:[grid-area:1/1/2/7] 2xl:pl-18'>
				<Image
					filename={blok.image.filename}
					alt={blok.image.alt}
					top
					class:list={[
						'h-[24rem] sm:h-[32rem] md:h-[36rem] lg:h-[40rem] rounded-bl-[1.5rem] md:rounded-bl-[2rem] rounded-br-[8rem] md:rounded-br-[14rem] lg:rounded-br-[20rem] rounded-tr-[1.5rem] rounded-tl-[1.5rem] md:rounded-tr-[4rem] lg:rounded-tr-[4.5rem] md:rounded-tl-4xl 2xl:rounded-tl-[4.5rem]',
					]}
				/>
			</div>
			<div
				class='col-span-full ml:[grid-area:1/5/2/9] lg:[grid-area:1/7/2/13] r-hide-overflow'>
				<div
					class:list={[
						_sectionPadding('top'),
						'px-5 sm:px-8 lg:px-10 xl:px-18 h-full',
					]}>
					<div
						class='absolute -top-2 -left-4 md:-top-6 md:-left-6 lg:-top-8'>
						<Icon
							name='quote-open'
							class='size-28 md:size-48 lg:size-52 text-[var(--color-text-title)] opacity-10'
						/>
					</div>
					<SwiperQuotes quotes={quotes} />
				</div>
			</div>
		</Grid>
	</Wrapper>
</Section>
