---
import Grid from '@layouts/Grid.astro'
import Section from '@layouts/Section.astro'
import Wrapper from '@layouts/Wrapper.astro'
import _slugify from '@scripts/slugify'
import { _sectionPadding, _xPadding } from '@scripts/snips'

const { blok, class: classes, ...props } = Astro.props
const post = blok.literature
---

<Section
	component={blok.component}
	id={_slugify(blok.heading)}
	title={blok.heading}
	overlap
	spy>
	<Wrapper>
		<Grid
			grid='4-12-12'
			class='r-hide-overflow overflow-y-clip z-20 bg-[var(--color-bg-default)] rounded-t-[2rem] md:rounded-t-[3.5rem] lg:rounded-t-[4.5rem]'>
			<div
				class:list={[
					'col-span-full xl:[grid-area:1/1/2/3] self-start sticky bg-[var(--color-bg-default)] z-10 -top-px [&.is-pinned]:shadow xl:!shadow-none overflow-auto',
					_sectionPadding('top-xl-up'),
					_xPadding('both-lgdown'),
				]}
				data-pin-top>
				<div>ABCDE...</div>
			</div>
			<div>
				Lorem ipsum dolor sit amet consectetur adipisicing elit. Minus,
				ullam deleniti atque eaque quisquam illo id saepe vitae ex
				maxime fugiat nam! Fugit odio consequuntur asperiores, cum quas
				molestiae! Quisquam?
			</div>
		</Grid>
	</Wrapper>
</Section>
