---
import Section from '@layouts/Section.astro'
import Wrapper from '@layouts/Wrapper.astro'
import Grid from '@layouts/Grid.astro'
import Text from '@atoms/Text.astro'
import ButtonLink from '@atoms/ButtonLink.astro'
import { _sectionPadding, _xPadding, _spaceY, _gridGap } from '@scripts/snips'
import Icon from '@atoms/Icon.astro'
import BrandCutFull from '@atoms/BrandCutFull.astro'
import ButtonMore from '@atoms/ButtonMore.astro'
import Breadcrumb from '@blocks/Breadcrumb.astro'
import _empty from '@scripts/empty'
import _slugify from '@scripts/slugify'
import Image from '@atoms/Image.astro'

const {
		blok,
		altComponent,
		breadcrumbLink,
		breadcrumbLabel,
		altTitle,
		altCopy,
		class: classes,
		...props
	} = Astro.props,
	copy = altCopy ? altCopy : blok.copy
---

<Section
	component={altComponent ? altComponent : blok.component}
	header
	section={false}
	class:list={[
		'r-hide-overflow min-h-[19.5rem] xs:min-h-[17rem] sm:min-h-[16rem] md:min-h-[19rem] lg:min-h-[20rem]',
		classes,
	]}
	{...props}>
	<Wrapper margins={false}>
		<Grid grid='4-12-12' class='items-start'>
			<div
				class:list={[
					'[grid-area:1/1/2/5] ml:[grid-area:1/1/2/6] order-2 ml:order-1 mt-[20rem] ml:mt-0 rounded-tr-[2rem] rounded-br-[3.5rem] lg:rounded-tr-[3.5rem] lg:rounded-br-[6rem] bg-[var(--color-bg-default)] relative z-[2]',
					_xPadding('both-lg-l'),
				]}>
				<div
					class='py-4 sm:py-6 ml:py-8 lg:pt-4 lg:pb-12 ml:pr-6 lg:pr-12 flex flex-col gap-2 sm:gap-3'>
					<Breadcrumb
						altLink={breadcrumbLink
							? breadcrumbLink
							: blok.link[0].link}
						labelText={breadcrumbLabel
							? breadcrumbLabel
							: 'JEE Home'}
						page={altTitle ? altTitle : blok.title}
					/>
					<Text
						tag='h2'
						text={altTitle ? altTitle : blok.headline}
						color='title'
						size='3'
						family='display'
						weight='extra'
						tighten
					/>
					{
						!_empty(copy) && copy.length > 1 && (
							<Text
								tag='p'
								text={copy}
								color='body'
								size='copy'
								family='display'
								class='max-w-screen-sm pr-6 mt-1.5 sm:mt-2.5 lg:mt-2'
							/>
						)
					}
				</div>
			</div>
			<div
				class='[grid-area:1/1/2/5] ml:[grid-area:1/5/2/13] order-1 ml:order-2 h-[25rem] ml:h-[32.5rem] lg:h-[39rem] rounded-t-[1.5rem] ml:rounded-[2rem] ml:!rounded-br-[14rem] lg:rounded-[3.5rem] lg:!rounded-br-[18.5rem] ml:-mt-[1.875rem] lg:-mt-[2.8125rem] z-[1] relative overflow-clip'>
				<Image
					filename={blok.image.filename}
					alt={blok.image.alt}
					filter
					class='h-full'
				/>
			</div>
		</Grid>
	</Wrapper>
	<BrandCutFull placement='expression' />
</Section>

